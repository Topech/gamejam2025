script/source = "extends Node2D

## How much the bubble grows per second. Max is 100
@export var growth_rate: float = 20

@export var initial_bubble_scale: float = 0

@export var max_bubble_scale: float = 500

var accumulated_growth: float



func _ready() -> void:
	accumulated_growth = 0
	var scale_vec = Vector2(initial_bubble_scale, initial_bubble_scale)
	set_scale(scale_vec)



func calc_scale_for_growth(growth: float) -> float:
	\"\"\" growth is 0-100, scale is dependant \"\"\"
	var growth_ratio = growth / 100
	return growth_ratio * max_bubble_scale


func grow(growth: float):
	min(max_bubble_scale, calc_scale_for_growth(growth))
	
	
"

